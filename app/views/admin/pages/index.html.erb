<p id="notice"><%= notice %></p>

<h1>Listing Admin Pages</h1>

<table class="table">
  <thead>
    <tr>
      <th>Display name</th>
      <th>Sub display name</th>
      <th>Url name</th>
      <th>Description</th>
      <th>Status</th>
      <th>Date</th>
      <th>Date visible</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Redirect url</th>
      <th>Redirect target</th>
      <th>Body</th>
      <th>Meta</th>
      <th>Replace</th>
      <th>Lock version</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_pages.each do |admin_page| %>
      <tr>
        <td><%= admin_page.display_name %></td>
        <td><%= admin_page.sub_display_name %></td>
        <td><%= admin_page.url_name %></td>
        <td><%= admin_page.description %></td>
        <td><%= admin_page.status %></td>
        <td><%= admin_page.date %></td>
        <td><%= admin_page.date_visible %></td>
        <td><%= admin_page.start_date %></td>
        <td><%= admin_page.end_date %></td>
        <td><%= admin_page.redirect_url %></td>
        <td><%= admin_page.redirect_target %></td>
        <td><%= admin_page.body_id %></td>
        <td><%= admin_page.meta_id %></td>
        <td><%= admin_page.replace_id %></td>
        <td><%= admin_page.lock_version %></td>
        <td><%= link_to 'Show', admin_page, class: 'btn' %></td>
        <td><%= link_to 'Edit', edit_admin_page_path(admin_page), class: 'btn' %></td>
        <td><%= link_to 'Destroy', admin_page, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

