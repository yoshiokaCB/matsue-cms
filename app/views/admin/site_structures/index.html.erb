<p id="notice"><%= notice %></p>

<h1><%= t('activerecord.attributes.admin/site_structure.index_title') %></h1>

<table class="table table-bordered table-hover table-condensed">
  <thead>
    <tr class="success">
      <th>ID</th>
      <th><%= t("activerecord.attributes.admin/site_structure.index_title") %></th>
      <th><%= t("activerecord.attributes.admin/site_structure.sort") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_site_structures.each do |admin_site_structure| %>
      <tr>
        <td><%= admin_site_structure.id %></td>
        <td><%= raw(contents_title_html(admin_site_structure)) %></td>
        <td><%= admin_site_structure.sort %></td>
        <td><%= link_to t('common.show'), admin_site_structure, class: 'btn' %></td>
        <td><%= link_contents_edit(admin_site_structure) %></td>
        <td><%= link_to t('common.destroy'), admin_site_structure, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('common.new'), new_admin_site_structure_path, class: 'btn' %>
<%= link_to t('common.page_new'), new_admin_page_path, class: 'btn' %>
<%= link_to t('common.category_new'), new_admin_category_path, class: 'btn' %>
